<!DOCTYPE html>
<html>

<head>
  {{> analytics}}

  <meta charset="utf-8" />
  <title>InterestEDU</title>

  {{> headIncludes}}
</head>

<body>

  {{> nav}}

  <div class="container">

    {{#if user}}
    <h3>{{user.name}}, {{user.college}} Class of {{user.grad_year}}</h3>

    <h2>Your interests:</h2>

    {{#if interests}}
    <ul class="interests">
      {{#each interests}}
      <li class="interest">
        <a href="/interests/{{this.id}}" class="interest-link">{{this.group_name}}</a>
      </li>
      {{/each}}
    </ul>
    {{else}}

    <h3>Please add some interests</h3>

    {{/if}}

    {{else}}

    <a href="/login">Please log in</a>

    {{/if}}

  </div>

  {{> footer}}
</body>

</html>
